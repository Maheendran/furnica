
<%- include('../htmlbody/Adminheader') -%>
<style>
button>i{
font-size: 1.2rem;
padding: 5px;
}
</style>
<main>
<div class="container ">
<h2 class="mt-3">Banner</h2>
<div class="col-sm-6 col-10 m-auto">
<form action="/admin/newbanner" method="POST" enctype="multipart/form-data">
<div class="form-group">
<label for="productImage">Banner Heading:</label>
<input type="text" name="heading" class="form-control"  id="category" placeholder="Enter heading" required>
</div>
<div class="form-group">
<label for="productImage">Banner Sub heading:</label>
<input type="text" name="subheading" class="form-control"  id="category" placeholder="Enter sub heading" required>
</div>
<div class="form-group">
<label for="productImage">Banner Link:</label>
<input type="text" name="link" class="form-control"  id="category" placeholder="Enter link" required>
</div>
<div class="form-group mt-2">
<label for="productImage">Banner Image:</label>

<input type="file"  class="form-control" id='imageInput' accept="image/*" multiple name="image"  required>
</div>
<div class="mt-3 text-center">
<button type="submit" id="submit_btn" class="btn btn-primary mb-4 rounded-pill">Submit</button>
</div>
<p id="errordetail"></p>

</form>
</div>


<div class="container text-center">
<div class="row">

<% for( let index = 0; index < bannerdata.length; index++ ) { %>

<!--  -->
<div class="card m-auto" style="width: 18rem;">
<img class="card-img-top" style="height: 200px;" src="<%= locals.bannerdata[index].imageUrl  %>"alt="Card image cap">
<div class="card-body">
<h5 class="card-title"><%= locals.bannerdata[index].heading %></h5>
<p class="card-text"><%= locals.bannerdata[index].subheading %></p>
<a href="/admin/updatebanner?bannerId=<%= locals.bannerdata[index]._id %>">
<button class="badge-success badge rounded-pill" style="border: none;" ><i class="fa-solid fa-pen-to-square"></i> </button></a>
<a href="/admin/deletebanner?bannerId=<%= locals.bannerdata[index]._id %>">
<button  class="badge-danger badge rounded-pill" style="border: none" ><i class="fa-solid fa-trash"></i></button></a>
</div>
</div>
<% } %>

</div>
</div>
</main>

