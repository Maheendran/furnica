
<style>
  .table-container {
  width: 100%;
  overflow-x: auto;
  margin-bottom: 1rem;
}

.table {
  width: 100%;
  margin-bottom: 1rem;
  border-collapse: collapse;
  background-color: #fff;
  color: #212529;
}

.table th,
.table td {
  padding: 0.75rem;
  vertical-align: top;
  background-color: rgb(246, 239, 225);
}

.table th {
  font-weight: bold;
  text-align: left;
  background-color: #f7f7f7;
  border-color: #dee2e6;
}

.table-striped tbody tr:nth-of-type(odd) {
  background-color: rgba(0, 0, 0, 0.05);
}

</style>
<h2 style="margin: auto;text-align: center;margin-bottom: 1rem;">Orders lists</h2>
<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>OrderId</th>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>User</th>
        <th>Payment</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <%if(orders.length>0)  {%>
      <%for(let i=0;i <orders.length; i++){%>
        <tr style="border-bottom: 1px solid grey; font-size: 0.8rem;">
          <td><%= orders[i]._id  %></td>
            <td >
          <% for( let index = 0; index < orders[i].product.length; index++) { %>
        <%= orders[i].product[index].name  %> 
          <br>
   
          <% } %>
        </td>
          <!-- ========== -->
          <td>
            <% for( let index = 0; index < orders[i].product.length; index++) { %>
         <%= orders[i].product[index].price  %> 
            <br>
     
            <% } %>
          </td>
          <!--  -->
          <td class="text-center">
            <% for( let index = 0; index < orders[i].product.length; index++) { %>
           <%= orders[i].product[index].quantity  %> 
            <br>
     
            <% } %>
          </td>
          <!--  -->
          <td>
            <%= orders[i].name %>
          </td>
          <td>
            <%= orders[i].paymentMethod %>
          </td>
          <td>
            <%= orders[i].status %>
          </td>
          
        </tr>
      <% } %>
      <%}else{%>
  
        <td colspan="5">products note found</td>
        
        </tr>
        <% } %>

    </tbody>
  </table>
</div>
