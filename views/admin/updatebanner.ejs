
<%- include('../htmlbody/Adminheader') -%>
                <main>
                   <h3 class="m-2">Update banner</h3>

                   <div class="container ">
<div class="col-sm-6 col-10 m-auto">
    <form action="/admin/updatebanner?bannerId=<%= locals.bannerdata._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="productImage">Banner Heading:</label>
      <input type="text" value="<%= locals.bannerdata.heading %>" name="heading" class="form-control"  id="category" placeholder="Enter heading" required>
      </div>
      <div class="form-group">
        <label for="productImage">Banner Sub heading:</label>
    <input type="text" name="subheading" class="form-control"  value="<%= locals.bannerdata.subheading %>" placeholder="Enter sub heading" required>
    </div>
    <div class="form-group">
        <label for="productImage">Banner Link:</label>
    <input type="text" name="link" class="form-control"  value="<%= locals.bannerdata.link %>" placeholder="Enter link" required>
    </div>
        <div class="form-group mt-2">
            <div class="col-7 col-sm-3">
                <img class="img-fluid" src="<%= locals.bannerdata.imageUrl %>" alt="">
            </div>
      <label for="productImage">Banner Image:</label>

      <input type="file"  class="form-control" id='imageInput' value="<%= locals.bannerdata.imageUrl %>" accept="image/*" multiple name="image"  >
    </div>
    <div class="mt-3 text-center">
      <button type="submit" id="submit_btn" class="btn btn-primary mb-4 rounded-pill">Submit</button>
    </div>
 

  </form>
                   </div>
            
                </main>
                <%- include('../htmlbody/AdminFooter') -%>

