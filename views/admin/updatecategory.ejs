
<%- include('../htmlbody/Adminheader') -%>
                <main>
                  <!--  -->
                  <form action="/furnica/admin/updateCategory/<%= locals.param %>" method="post" enctype="multipart/form-data">
                  
                    <div class="form-group col-12 col-sm-4 m-auto mt-4" >
              
                      <img class="img-fluid" src="/uploads/<%= locals.category.imageUrl[0] %>" alt="">
                      <label for="productImage">Category Name:</label>
                   <input type="text" name="category" id="category" class="form-control  mt-2"
                    value="<%= locals.category.category %>" placeholder="new category">
                   
                    </div>
                    <div class="form-group col-12 col-sm-4 m-auto">
                      <label for="productImage">Category Image:</label>
                      <input type="file" class="form-control id="productImage" multiple name="image"
                       >
                    </div>
                    <div class="mt-3 col-4 m-auto">
                      <button type="submit" class="btn btn-primary mt-2  rounded-pill">Submit</button>
                    </div>
                
                  </form>
                  <p> <%= locals.errorDetail %></p>
            
                  <!--  -->
                </main>
              
                <%- include('../htmlbody/AdminFooter') -%>