<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
    <% for( let index = 1; index < bannerdata.length; index++ ) { %>
    <li data-target="#carouselExampleCaptions" data-slide-to="<%= [index] %>"></li>
    <% } %>
  </ol>
  <div class="carousel-inner ">
    <div class="carousel-item active carouselheight" style="position: relative;" >
    
      <img style="width: 100%;height: 100%;" src="/uploads/<%= locals.bannerdata[0].imageUrl  %>"  class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block ">
        <h1><%= locals.bannerdata[0].heading  %></h1>
        <p><%= locals.bannerdata[0].subheading  %></p>
        <a href="<%= locals.bannerdata[0].link  %>">
        <button class=" btn btn-light">Shop Now</button></a>
      </div>
      <div class="shadow"></div>
    </div>
    <!--  -->
    <% for( let index = 1; index < bannerdata.length; index++ ) { %>
    <div class="carousel-item carouselheight" >
      <img style="width: 100%;height: 100%;" src="/uploads/<%= locals.bannerdata[index].imageUrl  %>"  class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h1><%= locals.bannerdata[index].heading  %></h1>
        <p><%= locals.bannerdata[index].subheading  %></p>
        <a href="<%= locals.bannerdata[index].link  %>">
        <button class="btn btn-light" >Shop Now</button></a>
      </div>
      <div class="shadow"></div>
    </div>
    <% } %>
  


  </div>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>












